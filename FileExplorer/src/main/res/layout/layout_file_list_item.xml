<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/bg_file_item">
    <TextView
        android:id="@+id/tv_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@drawable/bg_icon_dir"
        tools:text="文件夹" />

    <ImageView
        android:id="@+id/iv_small_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-20dp"
        android:layout_toEndOf="@+id/tv_icon"
        android:layout_below="@+id/tv_icon"
        tools:src="@color/black" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="18dp"
        android:autoSizeMinTextSize="12dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/tv_icon"
        tools:text="AAAABBBBCCCCDDDDEEEEFFFFGGGGHHHHIIIIJJJJKKKKLLLLMMMMNNNNOOOOPPPPQQQQ" />
</RelativeLayout>